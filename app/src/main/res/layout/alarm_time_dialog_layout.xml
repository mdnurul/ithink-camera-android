<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/time_tip_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/navigation" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1" >

            <Button
                android:id="@+id/start_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text=" - " />

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26sp" />

            <Button
                android:id="@+id/start_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text=" + " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1" >

            <Button
                android:id="@+id/end_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text=" - " />

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26sp" />

            <Button
                android:id="@+id/end_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text=" + " />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="1.0px"
        android:layout_marginRight="1.0px"
        android:layout_marginTop="15dp"
        android:background="@color/about_tv_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/navigation"
            android:textSize="18sp" />

        <View
            android:id="@+id/btn_line"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="@color/about_tv_color"
            android:orientation="vertical" />

        <Button
            android:id="@+id/OK_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="修改"
            android:textColor="@color/navigation"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>